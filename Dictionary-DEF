def main():
    # ğŸ“˜ Create a dictionary
    dog_dict = {
        "name": "Rex",
        "breed": "Cyber Shepherd",
        "age": 3,
        "vaccinated": True
    }

    print("ğŸ“¦ Original Dictionary:")
    print(dog_dict)

    # âœï¸ Update an entry
    dog_dict["age"] += 1
    print("\nğŸ‚ Happy Birthday! Age is now:", dog_dict["age"])

    # â• Add a new key-value pair
    dog_dict["owner"] = "CarterC"
    print("\nğŸ†• Added owner:", dog_dict["owner"])

    # âŒ Delete a key
    if "vaccinated" in dog_dict:
        del dog_dict["vaccinated"]
        print("\nğŸ’‰ Vaccination info removed.")

    # ğŸ” Look something up safely
    breed = dog_dict.get("breed", "Unknown Breed")
    print("\nğŸ¶ Breed:", breed)

    # ğŸ” Loop through dictionary
    print("\nğŸ“‹ Dictionary Contents:")
    for key, value in dog_dict.items():
        print(f" - {key}: {value}")

    # ğŸ¯ Dictionary comprehension
    uppercased = {k.upper(): str(v).upper() for k, v in dog_dict.items()}
    print("\nğŸ”¡ Uppercased Version:")
    print(uppercased)

    # ğŸ§¼ Clear the dictionary (careful!)
    # dog_dict.clear()

if __name__ == "__main__":
    main()
